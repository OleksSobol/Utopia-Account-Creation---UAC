# .env.example - Template for environment variables
# Copy this file to .env and fill in actual values
# NEVER commit .env to Git!

# Admin Credentials (REQUIRED)
# Either set an unhashed ADMIN_PASS for development, or a hashed ADMIN_PASS_HASH
ADMIN_USER=admin
ADMIN_PASS=change_me_in_development
# If you prefer hashed password, use: ADMIN_PASS_HASH=$2b$... (do NOT commit real hashes)

# Flask server settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5050

# Flask security (REQUIRED for production)
SECRET_KEY=replace_with_a_random_32_char_secret

# PowerCode Configuration (REQUIRED)
# Replace with your real PowerCode API key
PC_API_KEY=your_powercode_api_key_here
# Management/UI base URL
PC_URL=https://management.example.com
# API endpoints
PC_URL_API=https://management.example.com:444/api/1/index.php
PC_URL_UAPI=https://management.example.com:444/uapi

# ID of the IPv4 address group used by PowerCode
PC_ADDRESS_RANGE_V4=your_address_range_id

# PowerCode Service Plan IDs
SERVICE_PLAN_1GBPS_ID=164
SERVICE_PLAN_250MBPS_ID=163
SERVICE_PLAN_BOND_FEE_ID=172

# PowerCode additional options
# Set to 'false' only if you understand the SSL implications
PC_VERIFY_SSL=False
# Comma-separated tag ids applied to customers
PC_CUST_TAGS=1,2,3,4

# Customer portal password (used for simple shared portal access)
CUSTOMER_PORTAL_PASSWORD=change_me_in_production

# Powercode Tickets (optional)
TICKET_TEMPLATE_DIR=ticket_descriptions
TICKET_TEMPLATE_FILE=new_desc.txt
TICKET_TEMPLATE_META_FILE=new_desc.txt.meta.json

# Utopia API Configuration (REQUIRED)
UTOPIA_API_KEY=your_utopia_api_key_here
UTOPIA_URL_ENDPOINT=https://api.utopiafiber.dev

# Email Configuration (REQUIRED)
MAIL_SERVER=mail.example.com
MAIL_PORT=25
EMAIL_SENDER=no-reply@example.com
EMAIL_RECIPIENTS=ops@example.com,admin@example.com

# Notes:
# - Replace placeholder values with real values in your local .env file.
# - Do not commit real secrets to the repository. Keep .env in .gitignore.

