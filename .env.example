# .env.example - Template for environment variables
# Copy this file to .env and fill in actual values
# NEVER commit .env to Git!

# Admin Credentials (REQUIRED)
ADMIN_USER=admin
ADMIN_PASS=change_me_in_production

# Flask Security (REQUIRED for production)
SECRET_KEY=generate_random_32_char_key_here
# Flask server settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5050

# PowerCode Configuration (REQUIRED)
PC_API_KEY=your_powercode_api_key_here
# Management URL
PC_URL=https://example.com
# API URL
PC_URL_API=https://example.com:444/api/1/index.php
PC_URL_UAPI=https://example.com:444/api/1/index.php
PC_ADDRESS_RANGE_V4=id of IP adress group

# PowerCode Service Plan IDs (OPTIONAL - defaults provided)
SERVICE_PLAN_1GBPS_ID=164
SERVICE_PLAN_250MBPS_ID=163
SERVICE_PLAN_BOND_FEE_ID=172

# Utopia API Configuration (REQUIRED)
UTOPIA_API_KEY=your_utopia_api_key_here
UTOPIA_URL_ENDPOINT=https://api.utopiafiber.com

# SSL Certificate Verification (SECURITY)
# Set to 'false' because PowerCode API has certificate issues
# WARNING: Setting to 'false' makes connections vulnerable to MITM attacks
PC_VERIFY_SSL=False

# Email Configuration (REQUIRED)
MAIL_SERVER=your_mail_server_here
MAIL_PORT=25
EMAIL_SENDER=no-reply@example.com
EMAIL_RECIPIENTS=email1@example.com,email2@example.com,email3@example.com

# Customer Portal Settings (REQUIRED)
CUSTOMER_PORTAL_PASSWORD=change_me_in_production

# Ticket Template Configuration (OPTIONAL - defaults provided)
# Directory where ticket templates are stored
TICKET_TEMPLATE_DIR=ticket_descriptions
# Main template file name
TICKET_TEMPLATE_FILE=new_desc.txt
# Template metadata file name
TICKET_TEMPLATE_META_FILE=new_desc.txt.meta.json

